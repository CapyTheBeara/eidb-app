<ul class="tree">
{{#each db in content}}
    <li>
    {{#link-to 'database' db.name}}
        {{db.name}} <span class="badge">v{{db.version}}</span>
    {{/link-to}}
        <ul>
        {{#each store in db.stores}}
            <li>
            {{#link-to 'store' db.name store.name}}
                {{store.name}}
            {{/link-to}}
            </li>
        {{/each}}
        </ul>
    </li>
{{/each}}
</ul>

{{#if content}}
    <button class='btn btn-danger btn-xs' {{action 'deleteAllDbs'}}>Remove all databases</button>
{{/if}}
